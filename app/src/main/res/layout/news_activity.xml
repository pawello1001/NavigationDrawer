<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pawe.navigationdrawer.NewsActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/newstitle"

        android:id="@+id/newsDate"

        android:textSize="12sp"
        android:layout_marginLeft="140dp" />

    <ImageView
        android:id="@+id/newsimg"
        android:layout_height="100dp"
        android:layout_width="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <TextView
        android:text="newstitle"
        android:layout_height="50dp"
        android:id="@+id/newstitle"
        android:layout_width="200dp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/newsDate"
        android:layout_alignStart="@+id/newsDate" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newsdesc"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/newsimg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
