<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wyniki_stats"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pawe.navigationdrawer.WynikiStatsActivity">

    <ImageView
        android:id="@+id/wynikiStatsHostImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="5dp"/>
    <TextView
        android:id="@+id/wynikiStatsHostName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wynikiStatsHostImageView"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/wynikiStatsHostScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/wynikiStatsDwukropek"
        android:layout_marginTop="30dp"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/wynikiStatsDwukropek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text=" : "/>

    <TextView
        android:id="@+id/wynikiStatsGuestScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/wynikiStatsDwukropek"
        android:layout_marginTop="30dp"
        android:textSize="24dp"/>

    <ImageView
        android:id="@+id/wynikiStatsGuestImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/wynikiStatsGuestName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wynikiStatsGuestImageView"
        android:layout_alignLeft="@+id/wynikiStatsGuestImageView"
        android:layout_alignStart="@+id/wynikiStatsGuestImageView"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#92C94A">
            <TextView android:id="@+id/wynikiStatsPosiadanie"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryLight"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6F9C33">
            <TextView android:id="@+id/wynikiStatsStrzaly"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryLight"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#92C94A">
            <TextView android:id="@+id/wynikiStatsStrzalyCelne"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryLight"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6F9C33">
            <TextView android:id="@+id/wynikiStatsFaule"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryLight"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#92C94A">
            <TextView android:id="@+id/wynikiStatsSpalone"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryLight"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6F9C33">
            <TextView android:id="@+id/wynikiStatsZolteKartki"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryLight"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#92C94A">
            <TextView android:id="@+id/wynikiStatsCzerwoneKartki"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryLight"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>
